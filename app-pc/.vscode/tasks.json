{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Debug Python",
            "type": "process",
            "command": "${input:launchDebug}",
            "problemMatcher": [],
            "runOptions": {
                "runOn": "folderOpen"
            },
        },
        {
            "label": "Show plot",
            "type": "shell",
            "command": "python show_data.py ${input:plotNumberInput}",
            "problemMatcher": []
        }
    ],
    "inputs": [
        {
            "id": "launchDebug",
            "type": "command",
            "command": "workbench.action.debug.start",
            "args": [
                "Python Debug"
            ]
        },
        {
            "id": "plotNumberInput",
            "description": "Enter number of desired plot",
            "type": "promptString"
        }
    ]
}